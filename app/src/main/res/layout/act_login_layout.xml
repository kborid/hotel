<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/share_bg">

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="81dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/iv_user"
                android:drawablePadding="12dp"
                android:hint="用户名 / 邮箱 / 手机号"
                android:inputType="text"
                android:textColor="@color/secColor"
                android:textColorHint="@color/secColorShadow"
                android:textSize="@dimen/common_18sp" />

            <ImageView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/iv_cancel" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/comm_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/iv_pwd"
                android:drawablePadding="15dp"
                android:hint="密码"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:textColor="@color/secColor"
                android:textColorHint="@color/secColorShadow"
                android:textSize="@dimen/common_18sp" />

            <CheckBox
                android:id="@+id/cb_change"
                style="@style/login_checkBox_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/comm_line" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="?attr/mainColorBtnSel"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/common_15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_reigster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="@string/create"
                android:textColor="@color/white"
                android:textSize="@dimen/common_12sp" />

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:text="@string/forget_pwd"
                android:textColor="@color/white"
                android:textSize="@dimen/common_12sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_wx"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/comm_rectangle_btn_wx"
            android:text="@string/login_wx"
            android:textColor="@color/white"
            android:textSize="@dimen/common_12sp" />

        <Button
            android:id="@+id/btn_qq"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/comm_rectangle_btn_qq"
            android:text="@string/login_qq"
            android:textColor="@color/white"
            android:textSize="@dimen/common_12sp" />
    </LinearLayout>

</LinearLayout>