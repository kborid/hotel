<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <!--去程-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去程："
            android:textColor="@color/plane_mainColor"
            android:textSize="@dimen/common_18sp" />

        <TextView
            android:id="@+id/tv_plane_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12月10日 22：20"
            android:textColor="#666666"
            android:textSize="@dimen/common_18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_plane_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/air_ca_gjhk" />

        <TextView
            android:id="@+id/tv_plane_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="中国邮政航空"
            android:textColor="#666666"
            android:textSize="@dimen/common_18sp" />

        <TextView
            android:id="@+id/tv_plane_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="AB3321"
            android:textColor="#666666"
            android:textSize="@dimen/common_18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--返程-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返程："
            android:textColor="@color/plane_mainColor"
            android:textSize="@dimen/common_18sp" />

        <TextView
            android:id="@+id/tv_plane_date_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12月10日 22：20"
            android:textColor="#666666"
            android:textSize="@dimen/common_18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_plane_icon_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/air_ca_gjhk" />

        <TextView
            android:id="@+id/tv_plane_name_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="中国邮政航空"
            android:textColor="#666666"
            android:textSize="@dimen/common_18sp" />

        <TextView
            android:id="@+id/tv_plane_code_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="AB3321"
            android:textColor="#666666"
            android:textSize="@dimen/common_18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>