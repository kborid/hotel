<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_plane_card_bg">

        <!--内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <!--名称-->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="杭州西子湖四季酒店"
                android:textColor="#3c3c3c"
                android:textSize="@dimen/common_16sp"
                android:textStyle="bold" />

            <!--日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_in_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3月15日"
                        android:textColor="#3c3c3c"
                        android:textSize="@dimen/common_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="入住"
                        android:textColor="#989898"
                        android:textSize="@dimen/common_10sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_order_hotel_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3月25日"
                        android:textColor="#3c3c3c"
                        android:textSize="@dimen/common_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="离店"
                        android:textColor="#989898"
                        android:textSize="@dimen/common_10sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/line_plane_listitem"
                android:layerType="software" />

            <!--地址、电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iv_order_position"
                    android:drawablePadding="10dp"
                    android:text="桐梓林北路1111号"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/common_14sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/iv_order_phone"
                    android:drawablePadding="10dp"
                    android:text="12345678901"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/common_14sp" />
            </LinearLayout>
        </LinearLayout>

        <!--背景icon-->
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="right|bottom"
            android:contentDescription="@string/app_name"
            android:src="@drawable/iv_hotel_logo_small" />

        <!--状态-->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"
            android:text="已完成"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/common_16sp"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>