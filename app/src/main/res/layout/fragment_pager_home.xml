<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent30_"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.huicheng.hotel.android.ui.custom.CommonBannerLayout
                android:id="@+id/banner_lay"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/hintColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="17dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp">

                <!--城市-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_city_label"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="城市"
                        android:textColor="@color/secColor"
                        android:textSize="@dimen/common_15sp" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="城市"
                        android:paddingLeft="25dp"
                        android:textColor="@color/secColor"
                        android:textColorHint="@color/commonHintColor"
                        android:textSize="@dimen/common_24sp" />

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/iv_home_loc" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/comm_line2" />

                <!--关键词-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_key_label"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="关键词"
                        android:textColor="@color/secColor"
                        android:textSize="@dimen/common_15sp" />

                    <EditText
                        android:id="@+id/et_keyword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="酒店名/位置/品牌"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingLeft="25dp"
                        android:textColor="@color/secColor"
                        android:textColorHint="@color/commonHintColor"
                        android:textSize="@dimen/common_18sp" />

                    <ImageView
                        android:id="@+id/iv_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/delete_btn_selector" />

                    <ImageView
                        android:id="@+id/iv_voice"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/iv_home_voice" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/comm_line2" />

                <!--价位-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price_label"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="价位"
                        android:textColor="@color/secColor"
                        android:textSize="@dimen/common_15sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp"
                        android:text="不限"
                        android:textColor="@color/secColor"
                        android:textSize="@dimen/common_18sp" />

                    <ImageView
                        android:id="@+id/iv_pull"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/iv_home_pull" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/comm_line2" />
                <!--日期-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_label"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="日期"
                        android:textColor="@color/secColor"
                        android:textSize="@dimen/common_15sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="25dp"
                        android:textColor="@color/secColor"
                        android:textSize="@dimen/common_18sp"
                        tools:text="8月31日-12月31日" />

                    <ImageView
                        android:id="@+id/iv_date"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/iv_home_date" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/comm_line2" />

                <TextView
                    android:id="@+id/tv_next_search"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/comm_rectangle_btn_transparent_withbound"
                    android:drawablePadding="18dp"
                    android:drawableRight="@drawable/accessory_selector"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="搜索酒店"
                    android:textColor="@color/common_color_selector"
                    android:textSize="@dimen/common_15sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>