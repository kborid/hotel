<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:id="@+id/no_discount_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/comm_rectangle_yhq_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_no_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="无优惠券"
                android:textColor="@color/noDiscountColor"
                android:textSize="@dimen/common_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_no_discount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="请关注官方活动"
                android:textColor="@color/noDiscountColor"
                android:textSize="9sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/active_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:background="?attr/yhqActiveBg"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tv_no_coupon_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/common_12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_no_coupon_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2016/11/30"
                android:textColor="@color/white"
                android:textSize="@dimen/common_12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/has_discount_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/pager_layout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:clipChildren="false">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:clipChildren="false"
                android:overScrollMode="never" />

            <LinearLayout
                android:id="@+id/indicator_lay"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="免费房券说明"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/common_12sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:scrollbarThumbVertical="@drawable/p3016_scrollbar">

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_10sp" />
            </ScrollView>

            <Button
                android:id="@+id/btn_use"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="?attr/mainColorBtnSel"
                android:text="立即使用"
                android:textColor="@color/white"
                android:textSize="@dimen/common_15sp" />

            <Button
                android:id="@+id/btn_rule"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/comm_rectangle_btn_transparent_withbound"
                android:text="使用规则"
                android:textColor="@color/common_color_selector"
                android:textSize="@dimen/common_15sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>