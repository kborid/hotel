<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:drawableLeft="@drawable/iv_phone"
        android:drawablePadding="17dp"
        android:hint="手机号码"
        android:inputType="text"
        android:textColorHint="@color/registerhintColor"
        android:textSize="@dimen/common_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/iv_code"
            android:drawablePadding="12dp"
            android:hint="验证码"
            android:inputType="text"
            android:textColorHint="@color/registerhintColor"
            android:textSize="@dimen/common_text_size" />

        <Button
            android:id="@+id/btn_yzm"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/comm_rectangle_btn"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/common_12sp" />
    </LinearLayout>

</LinearLayout>