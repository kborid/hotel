<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.huicheng.hotel.android.ui.custom.RoundedTopImageView xmlns:roundImage="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_hotel_icon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/def_hotel_list"
            roundImage:radius="5dp" />

        <LinearLayout
            android:id="@+id/detail_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lv_hotel_item_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/vip_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/indicatorColor"
                android:padding="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_vip_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="粉丝价"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/tv_vip_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="100元"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_hotel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="桔子水晶酒店(杭州火车东站店)"
                    android:textColor="@color/secColor"
                    android:textSize="@dimen/common_12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hotel_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="500米"
                    android:textColor="@color/secColor"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/tv_hotel_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="480元起"
                    android:textColor="@color/searchHintColor"
                    android:textSize="@dimen/common_10sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/iv_cert_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_cert_gold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_hotel_special_price_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="特价："
                            android:textColor="?attr/hotelItemPrice"
                            android:textSize="@dimen/common_9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_hotel_special_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="420 元"
                            android:textColor="?attr/hotelItemPrice"
                            android:textSize="@dimen/common_18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/comm_rectangle_btn_assess_high"
        android:gravity="center"
        android:text="4.5"
        android:textColor="@color/white"
        android:textSize="@dimen/common_12sp" />
</android.support.v7.widget.CardView>