<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- title -->
    <LinearLayout
        android:id="@+id/comm_title_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/iv_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_center_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/secColor"
                android:textSize="@dimen/common_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_center_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/common_10sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_right"
            style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:src="@drawable/iv_map" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comm_title_rl">

        <RelativeLayout
            android:id="@+id/search_lay"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:hint="酒店名/位置/品牌"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:textColor="?attr/mainColor"
                android:textColorHint="@color/secColorShadow"
                android:textSize="@dimen/common_24sp" />

            <ImageView
                android:id="@+id/iv_search"
                style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_search_blue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/comm_line2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_lay"
            android:orientation="vertical">

            <!--选项卡-->
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabBackground="@drawable/common_item_selector_bg"
                app:tabIndicatorColor="?attr/hotelListTab"
                app:tabIndicatorHeight="2.5dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="?attr/hotelListTab"
                app:tabTextAppearance="@style/tabTextAppearance" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lineColor2" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/shadow_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/considerShadow"
        android:visibility="gone" />

    <com.huicheng.hotel.android.ui.custom.CustomConsiderLayout
        android:id="@+id/customConsiderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fab_margin"
        android:scaleType="center"
        android:src="@drawable/iv_input_add"
        app:backgroundTint="?attr/considerFab"
        app:elevation="15dp"
        app:rippleColor="?attr/considerFab" />
</RelativeLayout>