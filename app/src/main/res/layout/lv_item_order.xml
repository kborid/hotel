<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_order_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/iv_order_flag" />

        <!--<View
            android:id="@+id/shadow_up_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/comm_gradient_order_up_color" />

        <View
            android:id="@+id/shadow_down_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@drawable/comm_gradient_order_down_color" />-->
    </FrameLayout>

    <com.huicheng.hotel.android.ui.custom.CustomSwipeView
        android:id="@+id/swipeview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <include
            android:id="@+id/delete_lay"
            layout="@layout/base_order_delete_item_layout" />

        <include
            android:id="@+id/item_lay"
            layout="@layout/base_order_item_layout" />

    </com.huicheng.hotel.android.ui.custom.CustomSwipeView>
</LinearLayout>