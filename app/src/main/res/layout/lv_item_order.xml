<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/flag_lay"
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/mainColor" />

        <LinearLayout
            android:id="@+id/flag_date_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/orderlist_flag_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_flag_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2017"
                android:textColor="@color/white"
                android:textSize="@dimen/common_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_flag_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10/10"
                android:textColor="@color/white"
                android:textSize="@dimen/common_12sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_lay"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:background="@drawable/iv_order_item_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="杭州西子湖四季酒店"
                android:textColor="#333333"
                android:textSize="@dimen/common_18sp" />

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="2016年11月30日 10：00am"
                android:textColor="@color/secColor"
                android:textSize="@dimen/common_12sp" />

            <TextView
                android:id="@+id/tv_item_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/iv_location_gray"
                android:drawablePadding="15dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="浙江省杭州市灵隐路5号"
                android:textColor="@color/secColor"
                android:textSize="@dimen/common_12sp" />

            <TextView
                android:id="@+id/tv_item_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/iv_location_gray"
                android:drawablePadding="15dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="1234567890"
                android:textColor="@color/secColor"
                android:textSize="@dimen/common_12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/iv_hotel_logo_small" />

        <TextView
            android:id="@+id/tv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="已确定"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/common_15sp" />
    </RelativeLayout>
</LinearLayout>