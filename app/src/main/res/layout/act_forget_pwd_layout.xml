<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_bg"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <TableLayout
        android:id="@+id/table_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/iv_phone" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="手机号码"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="11"
                android:textColor="@color/secColor"
                android:textColorHint="@color/secColorShadow"
                android:textSize="@dimen/common_18sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/comm_line" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/iv_code" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_yzm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="验证码"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="6"
                    android:textColor="@color/secColor"
                    android:textColorHint="@color/secColorShadow"
                    android:textSize="@dimen/common_18sp" />

                <Button
                    android:id="@+id/btn_getYZM"
                    style="@style/blue_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:text="@string/get_checknumber"
                    android:textColor="#fff"
                    android:textSize="@dimen/common_12sp" />
            </LinearLayout>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/comm_line" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/iv_pwd" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="重新设置您的登录密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="20"
                android:textColor="@color/secColor"
                android:textColorHint="@color/secColorShadow"
                android:textSize="@dimen/common_18sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/comm_line" />

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/iv_pwd_t" />

            <EditText
                android:id="@+id/et_password2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请确认您的登录密码"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="20"
                android:textColor="@color/secColor"
                android:textColorHint="@color/secColorShadow"
                android:textSize="@dimen/common_18sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/comm_line" />
    </TableLayout>

    <Button
        android:id="@+id/btn_reset"
        style="@style/blue_button_style"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginTop="25dp"
        android:text="@string/done"
        android:textSize="@dimen/common_15sp" />
</LinearLayout>