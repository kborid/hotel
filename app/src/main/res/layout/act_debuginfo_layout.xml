<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/debug_divider_line"
        android:orientation="vertical"
        android:padding="20dp"
        android:showDividers="middle|end">

        <TextView
            android:id="@+id/tv_debuginfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:textColor="@color/secColor"
            android:textSize="@dimen/common_12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="环境切换"
            android:onClick="environmentChanged"
            android:textColor="@color/common_color_selector"
            android:textSize="@dimen/common_15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:onClick="jsTestMain"
            android:text="JS测试"
            android:textColor="@color/common_color_selector"
            android:textSize="@dimen/common_15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:onClick="closeDebugMenu"
            android:text="关闭Debug菜单"
            android:textColor="@color/common_color_selector"
            android:textSize="@dimen/common_15sp" />

    </LinearLayout>
</LinearLayout>