<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@drawable/p3016_scrollbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="描述"
                    android:textColor="@color/noDiscountColor"
                    android:textSize="@dimen/common_12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_rectangle_transparent_withbound_gray"
                    android:gravity="top|left"
                    android:hint="输入您的描述"
                    android:minHeight="100dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:textColor="@color/noDiscountColor"
                    android:textColorHint="@color/noDiscountColor"
                    android:textSize="@dimen/common_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="截图"
                    android:textColor="@color/noDiscountColor"
                    android:textSize="@dimen/common_12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/iv_add_picture"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_screen"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="?attr/mainColorBtnSel"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iv_camer"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/comm_line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_phone"
                    android:textColor="@color/noDiscountColor"
                    android:textSize="@dimen/common_12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/hotel_phone_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel_plane_booking"
                        android:textColor="@color/noDiscountColor"
                        android:textSize="@dimen/common_12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_hotel_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel_plane_phone"
                        android:textColor="@color/noDiscountColor"
                        android:textSize="@dimen/common_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/train_phone_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/train_booking"
                        android:textColor="@color/noDiscountColor"
                        android:textSize="@dimen/common_12sp" />

                    <TextView
                        android:id="@+id/tv_train_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/train_phone"
                        android:textColor="@color/noDiscountColor"
                        android:textSize="@dimen/common_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/taxi_phone_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/taxi_booking"
                        android:textColor="@color/noDiscountColor"
                        android:textSize="@dimen/common_12sp" />

                    <TextView
                        android:id="@+id/tv_taxi_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/taxi_phone"
                        android:textColor="@color/noDiscountColor"
                        android:textSize="@dimen/common_12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/comm_line2" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="?attr/mainColorBtnSel"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>