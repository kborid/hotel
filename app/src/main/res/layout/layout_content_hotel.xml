<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="城市"
                android:textColor="#9b9b9b"
                android:textSize="@dimen/common_12sp" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="12dp"
                android:textColor="#3c3c3c"
                android:textColorHint="#9b9b9b"
                android:textSize="@dimen/common_24sp"
                tools:text="绍兴" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="入住"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/tv_in_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="11dp"
                    android:text="9月21日"
                    android:textColor="#3f3f3f"
                    android:textSize="@dimen/common_14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="8晚"
                android:textColor="#9b9b9b"
                android:textSize="@dimen/common_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="离店"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/common_12sp" />

                <TextView
                    android:id="@+id/tv_out_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="11dp"
                    android:text="9月28日"
                    android:textColor="#3f3f3f"
                    android:textSize="@dimen/common_14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <!--关键词-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/search_tips"
                android:paddingBottom="12dp"
                android:paddingTop="15dp"
                android:textColor="#3f3f3f"
                android:textColorHint="#9b9b9b"
                android:textSize="@dimen/common_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_consider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/consider_hotel_tips"
                android:paddingBottom="12dp"
                android:paddingTop="15dp"
                android:textColor="#3f3f3f"
                android:textColorHint="#9b9b9b"
                android:textSize="@dimen/common_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <!--搜索酒店-->
        <TextView
            android:id="@+id/tv_next_search"
            android:layout_width="323dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:background="@drawable/main_hotel_btn_sel"
            android:gravity="center"
            android:text="搜索酒店"
            android:textColor="#3f3f3f"
            android:textSize="@dimen/common_15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!--优惠券-->
        <LinearLayout
            android:id="@+id/coupon_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_coupon_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/iv_my_coupon_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:text="优惠券"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/common_12sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#969696" />

        <!--我的行程-->
        <LinearLayout
            android:id="@+id/order_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/iv_my_order_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:text="我的行程"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/common_12sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#969696" />

        <!--旅行币-->
        <LinearLayout
            android:id="@+id/bounty_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bounty_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/iv_my_bounty_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:text="旅行币"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/common_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>