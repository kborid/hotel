<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="好看不？"
        android:textColor="@color/secColor"
        android:textSize="50sp" />

    <LinearLayout
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/view_tab_hot_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iv_tab_hotel" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="酒店"
                android:textColor="@color/secColor"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_msg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iv_tab_plane" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="飞机"
                android:textColor="@color/secColor"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_post"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_task"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/iv_heart" />

            <TextView
                android:id="@+id/tv_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="心"
                android:textColor="@color/secColor"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_community"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iv_tab_train" />

            <TextView
                android:id="@+id/tv_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="动火"
                android:textColor="@color/secColor"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/iv_tab_taxi" />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="出租"
                android:textColor="@color/secColor"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>