<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/root_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/iv_order_hotel_canceled"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_order_title"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="吉祥航空"
            android:textColor="@color/transparent60_"
            android:textSize="@dimen/common_10sp" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="2016年11月30日 10：00am"
            android:textColor="@color/white"
            android:textSize="@dimen/common_12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_city"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="成都-杭州"
            android:textColor="@color/white"
            android:textSize="@dimen/common_9sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/comm_rectangle_transparent_withbound_white"
            android:gravity="center"
            android:padding="2dp"
            android:text="改"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/common_9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="已完成"
            android:textColor="@color/white"
            android:textSize="@dimen/common_12sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
