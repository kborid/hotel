<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_plane_card_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp">

            <!--地址信息-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--姓名、电话-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="#666666"
                        android:textSize="@dimen/common_14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="15682568778"
                        android:textColor="#666666"
                        android:textSize="@dimen/common_14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--详细地址-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/test"
                    android:textColor="#666666"
                    android:textSize="@dimen/common_12sp" />

                <!--编辑、删除按钮-->
                <LinearLayout
                    android:id="@+id/action_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/plane_addr_edit_btn_bg"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:text="编辑"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_12sp" />

                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/plane_addr_delete_btn_bg"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:text="删除"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_12sp" />
                </LinearLayout>
            </LinearLayout>

            <!--默认地址设置flag-->
            <RelativeLayout
                android:id="@+id/flag_lay"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>