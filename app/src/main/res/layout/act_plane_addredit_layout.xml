<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@drawable/iv_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_center_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="添加地址"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/common_18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/plane_mainColor"
            android:textSize="@dimen/common_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <!--联系人信息-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/iv_plane_card_bg"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:visibility="visible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="22dp"
                    android:paddingTop="12dp"
                    android:text="联系人"
                    android:textColor="#666666"
                    android:textSize="@dimen/common_16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入收件人姓名"
                    android:inputType="text"
                    android:paddingBottom="10dp"
                    android:paddingTop="12dp"
                    android:textColor="#3c3c3c"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/common_16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e2e2e2" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingRight="22dp"
                    android:paddingTop="10dp"
                    android:text="联系电话"
                    android:textColor="#666666"
                    android:textSize="@dimen/common_16sp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入收件人联系电话"
                    android:inputType="phone"
                    android:paddingBottom="12dp"
                    android:paddingTop="10dp"
                    android:textColor="#3c3c3c"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/common_16sp" />
            </TableRow>
        </TableLayout>

        <!--地址信息-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:background="@drawable/iv_plane_card_bg"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:visibility="visible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="22dp"
                    android:paddingTop="15dp"
                    android:text="所在地区"
                    android:textColor="#666666"
                    android:textSize="@dimen/common_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="请选择所在地区"
                    android:paddingBottom="10dp"
                    android:paddingTop="15dp"
                    android:textColor="#3c3c3c"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/common_16sp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e2e2e2" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingRight="22dp"
                    android:paddingTop="8dp"
                    android:text="详细地址"
                    android:textColor="#666666"
                    android:textSize="@dimen/common_16sp" />

                <EditText
                    android:id="@+id/et_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入收件人详细地址"
                    android:paddingBottom="12dp"
                    android:paddingTop="8dp"
                    android:singleLine="false"
                    android:textColor="#3c3c3c"
                    android:textColorHint="#cccccc"
                    android:textSize="@dimen/common_16sp"
                    tools:text="四川省成都市桐梓林10000号凯莱帝景C东西南北" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/iv_plane_card_bg"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="默认地址"
                android:textColor="#666666"
                android:textSize="@dimen/common_16sp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="20dp"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/plane_switch_thumb"
                android:thumbTextPadding="10dp"
                android:track="@drawable/plane_switch_track" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>