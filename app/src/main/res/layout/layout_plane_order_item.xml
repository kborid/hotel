<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_plane_detailitem"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去程："
                    android:textColor="@color/plane_mainColor"
                    android:textSize="@dimen/common_12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_offdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-22 周六 08：55"
                    android:textColor="#333333"
                    android:textSize="@dimen/common_16sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="2dp"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/tv_cabin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经济舱"
                    android:textColor="#333333"
                    android:textSize="@dimen/common_16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_airport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="萧山机场T2 - 双流机场T1"
                android:textColor="#333333"
                android:textSize="@dimen/common_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:text="¥"
                    android:textColor="@color/plane_mainColor"
                    android:textSize="@dimen/common_18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:text="9900"
                    android:textColor="@color/plane_mainColor"
                    android:textSize="@dimen/common_18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:text="机建燃油"
                    android:textColor="#989898"
                    android:textSize="@dimen/common_10sp" />

                <TextView
                    android:id="@+id/tv_jj_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawablePadding="15dp"
                    android:text="¥50"
                    android:textColor="#989898"
                    android:textSize="@dimen/common_10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>