<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/comm_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/app_name"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/iv_back" />

        <LinearLayout
            android:id="@+id/title_content_lay"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_center_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="订单成功"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/common_18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="完成"
            android:textColor="@color/plane_mainColor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow_title_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-3dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/status_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="32dp">

            <ImageView
                android:id="@+id/iv_pay_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/iv_pay_succ" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="订单成功"
                android:textColor="#666666"
                android:textSize="@dimen/common_16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_info_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gohome"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/comm_rectangle_btn_planemain"
                android:gravity="center"
                android:text="返回首页"
                android:textColor="@color/white"
                android:textSize="@dimen/common_18sp" />

            <TextView
                android:id="@+id/tv_myorder"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/comm_rectangle_btn_white"
                android:gravity="center"
                android:text="我的订单"
                android:textColor="@color/plane_mainColor"
                android:textSize="@dimen/common_18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>