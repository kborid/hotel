<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/comm_line2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="入住日期"
            android:textColor="@color/calendarTextColor"
            android:textColorHint="@color/lableColor"
            android:textSize="@dimen/common_32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="×"
            android:textColor="@color/lableColor"
            android:textSize="@dimen/common_30sp" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="退房日期"
            android:textColor="@color/calendarTextColor"
            android:textColorHint="@color/lableColor"
            android:textSize="@dimen/common_32sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/comm_line2" />

    <LinearLayout
        android:id="@+id/week_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/comm_line2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.huicheng.hotel.android.ui.custom.calendar.CustomCalendarView xmlns:calendar="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendar_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            calendar:calendarHeight="400dp"
            calendar:colorCurrentDay="?attr/mainColorAccent"
            calendar:colorCurrentDayCircle="?attr/currentDayCircle"
            calendar:colorDayName="?attr/mainColorAccent"
            calendar:colorMonthName="?attr/mainColorAccent"
            calendar:colorNormalDay="?attr/mainColorAccent"
            calendar:colorSelectedDayBackground="?attr/selDayBackground"
            calendar:enablePreviousDay="false" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="?attr/bottomBtnSel"
            android:enabled="false"
            android:text="确定"
            android:textColor="@color/bottom_btn_text_selector"
            android:textSize="@dimen/common_15sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>