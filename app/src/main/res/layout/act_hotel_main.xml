<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--正文内容-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--banner-->
                <com.huicheng.hotel.android.ui.custom.CommonBannerLayout
                    android:id="@+id/banner_lay"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/hintColor" />

                <RelativeLayout
                    android:id="@+id/user_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_user"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/iv_home_user" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!--城市-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_city_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="城市"
                        android:textColor="#9b9b9b"
                        android:textSize="@dimen/common_12sp" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_city_label"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:textColor="#3c3c3c"
                        android:textColorHint="#9b9b9b"
                        android:textSize="@dimen/common_24sp"
                        tools:text="绍兴" />

                    <!--当前位置layout-->
                    <TextView
                        android:id="@+id/tv_curr_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="2dp"
                        android:drawableTop="@drawable/iv_curr_position"
                        android:text="@string/current_position"
                        android:textColor="#3c3c3c"
                        android:textSize="@dimen/common_10sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dedede" />

                <!--入住、离店-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="14dp">

                    <!--入住-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="入住"
                            android:textColor="#9b9b9b"
                            android:textSize="@dimen/common_12sp" />

                        <TextView
                            android:id="@+id/tv_in_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:text="9月21日 周八"
                            android:textColor="#3f3f3f"
                            android:textSize="@dimen/common_14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_days"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="8晚"
                        android:textColor="#9b9b9b"
                        android:textSize="@dimen/common_12sp" />

                    <!--离店-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="离店"
                            android:textColor="#9b9b9b"
                            android:textSize="@dimen/common_12sp" />

                        <TextView
                            android:id="@+id/tv_out_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:text="9月28日 周七"
                            android:textColor="#3f3f3f"
                            android:textSize="@dimen/common_14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dedede" />

                <!--城市、区域、位置、酒店-->
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/search_tips"
                    android:paddingBottom="12dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="12dp"
                    android:textColor="#3f3f3f"
                    android:textColorHint="#9b9b9b"
                    android:textSize="@dimen/common_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dedede" />

                <!--价格、星级、类型-->
                <TextView
                    android:id="@+id/tv_consider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/consider_hotel_tips"
                    android:paddingBottom="12dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="12dp"
                    android:textColor="#3f3f3f"
                    android:textColorHint="#9b9b9b"
                    android:textSize="@dimen/common_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dedede" />

                <!--搜索酒店-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_next_search"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/main_hotel_btn_sel"
                        android:gravity="center"
                        android:text="搜索酒店"
                        android:textColor="#3f3f3f"
                        android:textSize="@dimen/common_15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!--首页快捷入口-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--优惠券-->
                <LinearLayout
                    android:id="@+id/coupon_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_coupon_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iv_my_coupon_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:text="优惠券"
                        android:textColor="#3f3f3f"
                        android:textSize="@dimen/common_12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#969696" />

                <!--我的行程-->
                <LinearLayout
                    android:id="@+id/order_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_order_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iv_my_order_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:text="我的行程"
                        android:textColor="#3f3f3f"
                        android:textSize="@dimen/common_12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#969696" />

                <!--旅行币-->
                <LinearLayout
                    android:id="@+id/bounty_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_bounty_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iv_my_bounty_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:text="旅行币"
                        android:textColor="#3f3f3f"
                        android:textSize="@dimen/common_12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!--毛玻璃背景-->
    <RelativeLayout
        android:id="@+id/blur_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_logo_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/iv_logo_vertical" />

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/iv_left" />
    </RelativeLayout>

    <!--侧滑内容-->
    <com.huicheng.hotel.android.ui.custom.LeftDrawerLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:alpha="0.85"
        android:clickable="true" />
</android.support.v4.widget.DrawerLayout>
