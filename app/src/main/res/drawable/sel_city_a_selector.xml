<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/mainColorAccent" android:state_selected="true">
        <shape>
            <solid android:color="@color/mainColorAccent" />
        </shape>
    </item>

    <item android:color="@color/mainColorAccent" android:state_pressed="true">
        <shape>
            <solid android:color="@color/mainColorAccent" />
        </shape>
    </item>

    <item android:color="@color/transparent">
        <shape>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>
