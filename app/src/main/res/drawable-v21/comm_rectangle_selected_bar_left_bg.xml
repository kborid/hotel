<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/transparent50">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/selectedBarColor" />
                    <corners
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="@color/selectedBarColor" />
                    <corners
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/unselectedBarColor" />
                    <corners
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>